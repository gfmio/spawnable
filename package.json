{
  "name": "spawnable",
  "version": "0.0.0",
  "description": "Helpers for spawning child processes",
  "repository": "https://github.com/gfmio/spawnable",
  "author": "Frédérique Mittelstaedt <git@gfm.io>",
  "license": "MIT",
  "private": false,
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "./dist",
    "./README.md",
    "./LICENSE"
  ],
  "exports": {
    ".": {
      "default": "./dist/index.js",
      "import": "./dist/index.js",
      "node": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --minify",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch"
  },
  "dependencies": {
    "@types/node": "*",
    "eventemitter3": "^5.0.1",
    "ts-error": "^1.0.6"
  },
  "devDependencies": {
    "@swc/core": "^1.3.104",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3"
  }
}
